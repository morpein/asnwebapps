<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>profile</actionName>
        <packagings>
            <packaging>jar</packaging>
            
            
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            
        </goals>
        <properties>
                <exec.args>-classpath %classpath org.ujaen.asn.notes.MyNotesApplication</exec.args>
                <exec.executable>java</exec.executable>
                
                
                
            </properties>
    </action>
    <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>spring-boot:run</goal>
                
            </goals>
            <properties>
                <Env.SPRING_DEVTOOLS_RESTART_TRIGGERFILE>.nbRestartTrigger</Env.SPRING_DEVTOOLS_RESTART_TRIGGERFILE>
                <Env.SPRING_OUTPUT_ANSI_ENABLED>always</Env.SPRING_OUTPUT_ANSI_ENABLED>
                <Env.DEBUG>true</Env.DEBUG>
                
                
            </properties>
        </action>
    <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>spring-boot:run</goal>
                
            </goals>
            <properties>
                
                <spring-boot.run.jvmArguments>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address}</spring-boot.run.jvmArguments>
                <Env.SPRING_DEVTOOLS_RESTART_TRIGGERFILE>.nbRestartTrigger</Env.SPRING_DEVTOOLS_RESTART_TRIGGERFILE>
                <Env.SPRING_OUTPUT_ANSI_ENABLED>always</Env.SPRING_OUTPUT_ANSI_ENABLED>
                <Env.DEBUG>true</Env.DEBUG>
                
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
    
    
</actions>
